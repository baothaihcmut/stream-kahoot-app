model Question {
  id          String        @id @default(uuid())
  content     String     // Nội dung câu hỏi
  explanation String?    // Giải thích vì sao đáp án đúng
  choices     Choice[]   // Các lựa chọn
  categories  Category[] @relation("QuestionCategories")
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
}

model Choice {
  id         String      @id @default(uuid())
  text       String   // Nội dung đáp án
  isCorrect  Boolean  // Đây có phải đáp án đúng không?
  questionId String
  question   Question @relation(fields: [questionId] , references: [id])
}

model Category {
  id        String     @id @default(uuid())
  name      String     @unique // Tên chủ đề: Toán, Lý, Hoá,...
  questions Question[] @relation("QuestionCategories")
}
